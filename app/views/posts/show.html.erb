<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- left side -->
      <div class="level-left">
        <p class="level-item">
          <strong>Görevler</strong>
        </p>
      </div>

      <!-- Right Side-->
      <div class="level-right">
        <p class="level-item">
          <!-- link ile edite bağlan path'i post -->
         <%= link_to "Düzenle", edit_post_path(@post), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to "Sil", post_path(@post), method: :delete, data: {confirm: " Emin Misiniz? "}, class: "button is-danger" %>
        </p>
      </div>
    </nav>
    <hr />
    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="section comments">
 <div class="container">
   <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong>Yorumlar</h2>
   <%= render @post.comments %>
   <div class="comment-form">
     <hr />
     <h3 class="subtitle is-3">Cevap Yazın</h3>
     <%= render 'comments/form' %>
   </div>
 </div>
</section>
